{
    "env": {
        "browser": true,
        "commonjs":true,
        "es6":true,
        "node": true,
        "jest": true
    },
    "parser": "babel-eslint",
    "presets": ["flow"],
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "extends":"airbnb",
    "rules":{
      "arrow-body-style": ["error", "as-needed"],
      "no-unused-vars": [0],
       // code arrangement matter
       "no-use-before-define": [ 2, { "variables": false } ]
    }
}
